{
    "name": "movies-app",
    "version": "1.0.0",
    "description": "Single page application, which will allow users to search The Movie Database (TMDb)",
    "scripts": {
        "build": "webpack --config=webpack.config.development.js",
        "build-prod": "webpack -p --progress --config=webpack.config.production.js",
        "server": "babel-node server/app.js",
        "nodemon": "nodemon server/app.js --exec babel-node --presets es2015,stage-2",
        "start": "npm run build-prod && npm run server",
        "test": "jest --coverage",
        "lint": "eslint ./src --ext .js --ext .jsx"
    },
    "jest": {
        "setupFiles": [
            "raf/polyfill",
            "./jest.setup.js"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shubich/movies-app.git"
    },
    "author": "Andrei Shubich",
    "bugs": {
        "url": "https://github.com/shubich/movies-app/issues"
    },
    "homepage": "https://github.com/shubich/movies-app#readme",
    "dependencies": {
        "classnames": "^2.2.5",
        "enzyme": "^3.1.0",
        "enzyme-adapter-react-16": "^1.0.2",
        "express": "^4.16.1",
        "isomorphic-fetch": "^2.2.1",
        "nodemon": "^1.14.11",
        "prop-types": "^15.6.0",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-loading": "^1.0.0",
        "react-redux": "^5.0.6",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "redux": "^3.7.2",
        "redux-logger": "^3.0.6",
        "redux-saga": "^0.16.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "6.26.0",
        "babel-eslint": "^8.2.1",
        "babel-jest": "^21.2.0",
        "babel-loader": "7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-2": "6.24.1",
        "css-loader": "0.28.7",
        "eslint": "^4.16.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.4.0",
        "extract-text-webpack-plugin": "^3.0.2",
        "fetch-mock": "^5.13.1",
        "file-loader": "^1.1.5",
        "ignore-loader": "^0.1.2",
        "jest": "^21.2.1",
        "less": "^2.3.1",
        "less-loader": "^4.0.5",
        "react-test-renderer": "^16.0.0",
        "regenerator-runtime": "^0.11.0",
        "style-loader": "0.18.2",
        "uglifyjs-webpack-plugin": "^1.1.6",
        "webpack": "^3.6.0",
        "webpack-node-externals": "^1.6.0"
    }
}
